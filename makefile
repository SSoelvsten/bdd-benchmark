.PHONY: clean build test

MAKE_FLAGS=-j $$(nproc)

# ============================================================================ #
#  BUILD
# ============================================================================ #
build:
	@mkdir -p build/ && cd build/ && cmake ..
	@cd build/ && make ${MAKE_FLAGS} sylvan_queens

clean:
	@rm -rf build/

# ============================================================================ #
#  VARIABLE DEFAULTS
# ============================================================================ #
V = sylvan # Variant (sylvan, coom, buddy)
M = 1      # Memory
N = 0      # Input variable

# ============================================================================ #
#  EXAMPLES
# ============================================================================ #
queens: N := 8
queens: | build
	@./build/src/sylvan_queens ${N}
